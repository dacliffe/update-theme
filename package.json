{
  "name": "shopify-theme-merger",
  "version": "1.0.0",
  "description": "Shopify app to merge content changes between themes",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "vite",
    "build": "vite build",
    "start": "node server/index.js",
    "tunnel": "cloudflared tunnel --url http://localhost:3000"
  },
  "keywords": [
    "shopify",
    "theme",
    "merge",
    "content"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@shopify/app-bridge-react": "^4.1.0",
    "@shopify/polaris": "^12.0.0",
    "@shopify/shopify-api": "^9.0.0",
    "axios": "^1.6.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "http-proxy-middleware": "^3.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "vite": "^5.0.0"
  }
}



